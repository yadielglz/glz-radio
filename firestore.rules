rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to analytics data
    match /analytics/{document} {
      allow read: if true;
      allow write: if request.auth != null || request.method == 'create';
    }
    
    // Allow public read access to station data
    match /stations/{stationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read access to user preferences
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow public read access to app settings
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 